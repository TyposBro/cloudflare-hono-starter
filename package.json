{
  "name": "cf-hono-d1-drizzle-template",
  "version": "1.0.0",
  "description": "Production-ready Cloudflare Workers API template with Hono, D1, Drizzle ORM, and vertical slice architecture",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply my-app-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply my-app-db --remote",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.7.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260305.0",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18",
    "wrangler": "^4.69.0"
  }
}
